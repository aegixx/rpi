    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blink LED",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/blinker/blinker.go",
            "args": [
                "21",   // GPIO Pin for LED
                "10"    // Blink Interval in Seconds
            ]
        },
        {
            "name": "Button",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/button/button.go",
            "args": [
                "26",   // GPIO Pin for Button
                "21"    // GPIO Pin for LED
            ]
        },
        {
            "name": "Temp Monitor",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/monitor/monitor.go",
            "args": [
                "26",   // GPIO Pin for Button
                "21",   // GPIO Pin for LED
                "4"    // GPIO Pin for Temperature Sensor
            ]
        }
    ]
}